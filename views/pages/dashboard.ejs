<%- include('../components/header.ejs') %>
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Dashboard <sup> Admin</sup></h1>
        <% if (alert.message != '') { %>
            <div class="alert alert-<%= alert.status %>" role="alert">
            <%- alert.status == 'success' ?
            `<i class="fa fa-grin-hearts mr-2"></i>`:  
            `<i class="fa fa-smile-beam" ></i>`  
            %>
            <%= alert.message %>
            <!-- <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button> -->
            </div>
        <% } %>
        <div class="row">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Data Game</div>
                            <div class="h5 mb-2 font-weight-bold text-gray-800">Total: <span><%= countGame %></span>
                            </div>
                            <a href="/game" class="btn btn-sm btn-info"> Show</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-gamepad fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Data Billing</div>
                            <div class="h5 mb-2 font-weight-bold text-gray-800">Total: <span><%= countBilling %></span>
                            </div>
                            <a href="/billing" class="btn btn-sm btn-info"> Show</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Data News</div>
                            <div class="h5 mb-2 font-weight-bold text-gray-800">Total: <span><%= countNews %></span>
                            </div>
                            <a href="/news" class="btn btn-sm btn-info"> Show</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-newspaper fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Data Cart</div>
                            <div class="h5 mb-2 font-weight-bold text-gray-800">Total: <span><%= countCart %></span>
                            </div>
                            <a href="/cart" class="btn btn-sm btn-info"> Show</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-bag fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
    </div>
    <!-- /.container-fluid -->
<script>
 // timer
 $(document).ready(function(){
      const timerAlert = $('.alert').text();
      if (timerAlert !== ''){
        setTimeout(function(){
          $('.alert').fadeOut('slow');
        }, 4000);
      }
    });
</script>
<%- include('../components/bottom.ejs') %>
