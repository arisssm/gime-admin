  <!-- Modal Create -->
  <div class="modal fade" id="createAbout" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-info text-white">
          <h5 class="modal-title" id="exampleModalLabel">Create About</h5>
          <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/about" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label class="font-weight-bold" for="corporateName">Corporate Name</label>
              <input type="text" name="corporateName" id="corporateName" class="form-control"
                placeholder="corporate name.." />
            </div>
            <div class="row-cols-2">
              <div class="form-group">
                <label class="font-weight-bold" for="location">Location</label>
                <input type="text" name="location" id="location" class="form-control"
                placeholder="corporate location.." />
              </div>
              <div class="form-group">
                <label class="font-weight-bold" for="phone">Phone</label>
                <input type="text" name="phone" id="phone" class="form-control" placeholder="corporate phone.." />
              </div>
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="description">Description</label>
              <textarea type="text" name="description" id="description" class="form-control"
                placeholder="corporate description.. "></textarea>
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="address">Address</label>
              <input type="text" name="address" id="address" class="form-control"
                placeholder="corporate address.." />
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-info">
              <i class="fa fa-save"></i>
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Modal Edit -->
  <div class="modal fade" id="editAbout" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-info text-white">
          <h5 class="modal-title" id="exampleModalLabel">Update About</h5>
          <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="updateAbout" action="/about?_method=put" method="post">
          <div class="modal-body">
            <div class="form-group">
              <label class="font-weight-bold" for="corporateName">Corporate Name</label>
              <input type="text" name="corporateName" id="corporateName" class="form-control corporate"
                placeholder="corporate name.." />
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="location">Location</label>
              <input type="text" name="location" id="location" class="form-control spot"
                placeholder="corporate location.." />
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="description">Description</label>
              <!-- <textarea type="text" name="description" id="description" class="form-control desc"
                placeholder="corporate description.."></textarea> -->
              <input type="hidden" name="description" id="descCorporate" class="form-control desc">
                <trix-editor input="descCorporate" class="desc" placeholder="corporate description."></trix-editor>
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="address">Address</label>
              <input type="text" name="address" id="address" class="form-control street"
                placeholder="corporate address.." />
            </div>
            <div class="form-group">
              <label class="font-weight-bold" for="phone">Phone</label>
              <input type="text" name="phone" id="phone" class="form-control telephone" placeholder="corporate phone.." />
            </div>
            <div class="form-group">
              <input type="hidden" name="id" class="id-about" id="id">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-info">
              <i class="fa fa-save"></i>
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Modal Delete -->
  <div class="modal fade" id="deleteAbout" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger">
          <h6 class="modal-title text-white">Confirm delete !</h6>
          <i type="button" class="text-white fa fa-times-circle" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <form method="post" class="form-delete">
          <div class="modal-body">
            <h6>Are you sure for delete this data ?</h6>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-sm btn-danger">
              Yes
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <script>
    // edit
    $('.btn-edit').on('click', function() {
      $('#editAbout').modal('show');
      let company = $(this).data('company');
      let locale = $(this).data('location');
      let desc = $(this).data('desc');
      let street = $(this).data('address');
      let hphone = $(this).data('hp');
      let id = $(this).data('id');
      $('.corporate').val(company);
      $('.spot').val(locale);
      $('.desc').val(desc);
      $('.street').val(street);

      $('.telephone').val(hphone);
      $('.id-about').val(id);
    });
    
    // delete
    $('#dataTable').on('click', '.btn-delete', function() {
      $('#deleteAbout').modal('show');
      let id = $(this).data('id');
      let url = `/about/${id}?_method=DELETE`;
      $('.form-delete').attr('action', url);
    });
    // timer
    $(document).ready(function(){
      const timerAlert = $('.alert').text();
      if (timerAlert !== ''){
        setTimeout(function(){
          $('.alert').fadeOut('slow');
        }, 3000);
      }
    });
    // trix-editor
    $(document).ready(function(){
      $('#updateAbout').submit(function(event) {
        // Ambil konten HTML dari Trix Editor
        const descriptionCorporate = $('.desc').val();
        // Masukkan konten HTML ke dalam input tersembunyi
        $('#descCorporate').val(descriptionCorporate);
      })
    });
  </script>
